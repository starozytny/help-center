<!DOCTYPE html>
<html lang="fr" class="h-full bg-gray-100">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="{% block meta_description %}{% endblock %}" />
        <meta name="keywords" content="{% block meta_keywords %}{% endblock %}" />
        {% block noindex %}{% endblock %}
        {% block openGraph %}{% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" type="image/ico">
        <link rel="apple-touch-icon" href="{{ asset('favicon.png') }}"/>
        <title>{% block title %} | Centre d'aide de Logilink.fr{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('tailwind_app') }}
        {% endblock %}

        {% set consent = "logilinkLocalCookie" %} <!-- CONSENT Value -->
    </head>
    <body class="h-full">

        {#  hidden or flex  #}
        {% set maj_class = "hidden" %}
        {% set maj_date = "Mardi 30/05/2024 de 09h30 à 09h40 - " %}
        {% set maj_text = "Mise à jour du site, utilisation non recommandée." %}

        <div id="cookies" class="fixed bottom-4 left-4 z-30" data-consent="{{ consent }}"></div>

        <div class="h-full">
            {# --------------- BODY ---------------- #}
            {% block body %}{% endblock %}
        </div>

        <div id="flashes" data-flashes="{{ app.flashes | json_encode }}" class="fixed z-50 top-4 right-4 flex flex-col gap-4"></div>

        {% block javascripts %}
            {{ encore_entry_script_tags('tailwind_app') }}
        {% endblock %}
    </body>
</html>
