{% extends 'user/pages/documentations/template.html.twig' %}

{% set page_title %}Modifier : {{ elem.name }}{% endset %}
{% set page_subtitle %}Modifiez les informations de la documentation {{ product.name }} : {{ elem.name }}.{% endset %}

{% block main_content %}
    <div class="page-actions">
        <div class="col-1">
            <a href="{{ path('user_help_product_read', {'slug': product.slug}) }}" class="btn btn-outline-default">
                <span class="icon-left-arrow"></span>
                <span>Retourner à liste</span>
            </a>
            <a href="{{ path('user_help_documentation_read', {'p_slug': product.slug, 'slug': elem.slug}) }}" class="btn btn-outline-default">
                <span class="icon-left-arrow"></span>
                <span>Retourner à documentation</span>
            </a>
        </div>
        <div class="col-2"></div>
    </div>

    <div id="documentations_update" data-element="{{ element }}" data-product-slug="{{ product.slug }}">
        {% include "layout/components/loader.html.twig" %}
    </div>
{% endblock %}
