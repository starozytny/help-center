{% set page_subtitle %}Modifiez les informations relatives au produit {{ elem.name }}.{% endset %}

{% block breadcrumb %}
    {% set breadcrumbs = breadcrumbs | merge([ { text: page_title } ]) %}
    {{ parent() }}
{% endblock %}

{% block main_content %}
