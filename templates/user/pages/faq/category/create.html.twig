{% extends 'user/pages/products/template.html.twig' %}

{% set page_title %}Création d'une catégorie pour {{ product.name }}{% endset %}
{% set page_subtitle %}Ajouter une catégorie d'aide pour la page {{ product.name }} !{% endset %}

{% block breadcrumb %}
    {% set breadcrumbs = breadcrumbs | merge([
        { text: product.name, url: path('user_help_product_read', {'slug': product.name})  },
        { text: page_title }
    ]) %}
    {{ parent() }}
{% endblock %}

{% block main_content %}
    {% include "layout/components/admin/page_toolbar.html.twig" with { page_back: path('admin_help_faq_index') } %}

    <div id="help_faq_category_create"
         data-product-slug="{{ product.slug }}"
    >
        {% include "layout/components/loader.html.twig" %}
    </div>
{% endblock %}
