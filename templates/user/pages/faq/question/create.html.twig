{% extends 'user/pages/products/template.html.twig' %}

{% set page_title %}Création d'une question pour la catégorie : {{ category.name }}{% endset %}
{% set page_subtitle %}Ajouter une question à {{ category.name }}{% endset %}

{% block breadcrumb %}
    {% set breadcrumbs = breadcrumbs | merge([{ icon:'add', text: page_title }]) %}
    {{ parent() }}
{% endblock %}

{% block main_content %}
    {% include "layout/components/admin/page_toolbar.html.twig" with { page_back: path('admin_help_faq_index') } %}

    <div id="help_faq_question_create" data-category="{{ cat }}">
        {% include "layout/components/loader.html.twig" %}
    </div>
{% endblock %}
