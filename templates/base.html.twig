<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="{% block meta_description %}{% endblock %}" />
        <meta name="keywords" content="{% block meta_keywords %}{% endblock %}" />
        {% block noindex %}{% endblock %}
        {% block openGraph %}{% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" type="image/ico">
        <link rel="apple-touch-icon" href="{{ asset('favicon.png') }}"/>
        <title>{% block title %} | Centre d'aide de Logilink.fr{% endblock %}</title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('common_app') }}
        {% endblock %}

        {% set consent = "logilinkLocalCookie" %} <!-- CONSENT Value -->
    </head>
    <body class="light-mode" data-consent="logilinkHelpTheme">

        <div id="cookies" data-consent="{{ consent }}"></div>

        <div>
            {# --------------- BODY ---------------- #}
            {% block body %}{% endblock %}
        </div>

        {% for label, messages in app.flashes %}
            <div>{{ label }}</div>
            {% for message in messages %}
                <pre>{{ message }}</pre>
            {% endfor %}
        {% endfor %}

        {% block javascripts %}
            {{ encore_entry_script_tags('common_app') }}
        {% endblock %}
    </body>
</html>
